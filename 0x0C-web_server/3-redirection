#!/usr/bin/env bash
# Bash script that configures a Ubuntu machine
# so that /redirect_me is redirecting to another page

apt-get update -y
apt-get install nginx -y
ufw allow 80
sh -c 'echo "Hello World!" > /var/www/html/index.html'
sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.facebook.com/ismail.soso.58 permanent;' /etc/nginx/sites-available/default
service nginx restart
